<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-5">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user, local:true do |f| %>
        <div class="class-group">
	      <h4>Name</h4>
		    <%= f.text_field :name %>
	    </div>

	    <div class="class-group">
		  <h4>Image</h4>
		    <%= f.attachment_field :profile_image %>
	    </div>

        <div class="class-group">
		  <h4>Introduction</h4>
		    <%= f.text_area :introduction %>
	    </div>

        <div class="update">
          <%= f.submit 'Update User', class:"btn btn-secondary" %></br>
        </div>
      <% end %>
    </div>
  </div>
</div>